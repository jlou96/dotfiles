##### System ===================================================================

### General ====================================================================
alias -g bls="betterlockscreen -l dim"

### Window manager =============================================================

# i3 ---------------------------------------------------------------------------
alias -g i3ce="vim $HOME/dotfiles/config/i3/config"

### Shell ======================================================================

# zsh --------------------------------------------------------------------------
alias -g zae="vim $HOME/dotfiles/config/zsh/.zsh_aliases"
alias -g zpe="vim $HOME/dotfiles/config/zsh/.zprofile"
alias -g zrce="vim $HOME/dotfiles/config/zsh/.zshrc"

### Media ======================================================================

# Volume control ---------------------------------------------------------------
alias -g vd="pactl set-sink-volume $NUFORCE_SINK -5%"
alias -g vu="pactl set-sink-volume $NUFORCE_SINK +5%"
alias -g vm="pactl set-sink-mute   $NUFORCE_SINK"

