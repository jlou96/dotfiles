            "foreground":   "#D4BE98",
            "brightRed":    "#D1332E",
            "brightYellow": "#FABD2F",
            "brightGreen":  "#A9B665",
            "brightCyan":   "#89B482",
            "brightBlue":   "#7DAEA3",
            "brightPurple": "#D3869B",
            "brightWhite":  "#FFFAE8",
            "brightBlack":  "#AFA59B",
            "red":          "#E64B43",
